// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./mydb.sqlite"
}

model Post {
  id              Int      @id @default(autoincrement())
  title           String
  shortDescription String
  content         String
  slug            String   @unique
  datePublished   DateTime
  claps           Int      @default(0) // New field to track claps
}


