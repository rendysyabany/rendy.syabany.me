// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./mydb.sqlite"
}

model Post {
  id        Int     @id @default(autoincrement())
  slug      String  @unique
  claps     Int     @default(0) // Ensure this field exists
}


